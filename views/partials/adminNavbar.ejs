<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@300;400;500;600&display=swap');
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
}
body{
    min-height: 100%;
    /* background-color: #e3f2fd; */
}
nav{
    position: fixed;
    top:0;
    left: 0;
    height: 70px;
    width:100%;
    display:flex ;
    align-items: center;
    background-color: rgb(26, 26, 54);
    box-shadow: 0 8 1px rgba(8,0,0,0.1);
}
nav .logo{
    display: flex;
    align-items: center;
    margin: 0 24px;
}
.logo .menu-icon{
    color:white;
    font-size:24px;
    margin-right: 14px;
    cursor: pointer;
}
.logo .logo-name{
    color:white;
    font-size: 18px;
    font-weight: 500;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
nav .sidebar{
    position: fixed;
    top: 0%;
    left: -100%;
    height: 100%;
    width: 240px;
    padding: 20px 0;
    color: #fff;
    background-color: black;
    box-shadow: 0  5px 10px rgba(0,0,0,0.1);
    transition: all 0.4s ease;
}
nav.open .sidebar{
    left: 0;
}

.sidebar .sidebar-content{
    display: flex;
    height: 100%;
    flex-direction: column;
    justify-content: space-between;
    padding:30px 16px ;
}
.sidebar-content .list{
    list-style-type: none;
}
.list .nav-link{
    display: flex;
    align-items: center;
    padding: 14px 12px;
    border-radius: 8px;
    text-decoration: none;
}
.nav-link:hover{
    background-color: orange;
}
.nav-link .icons{
    margin-right: 14px;
    font-size: 20px;
}
.nav-link .link{
    font-size: 16px;
    font-weight: 400;
}
.nav-link:hover .icons,
.nav-link:hover .link{
    color: black;
}
.overlay{
    position: fixed;
    top: 0;
    left: -100%;
    height: 1000vh;
    width: 200%;
    opacity: 0;
    pointer-events: none;
    transition: all 0.4s ease;
}
nav.open ~.overlay{
    opacity: 1;
    left:240px;
    pointer-events: auto;
}
.icons{
    margin-right: 100px;
    font-size: 20px;
    font-weight:500;
}
.profile{
    width: 64px;
    height: 54px;
    border-radius: 2px;
    border: 2px solid orange;
}
.logo:hover .menu-icon {
    color: orange !important;
}
@media screen and (max-width: 768px) {
    nav .logo {
        margin: 0 12px;
    }
    .logo .logo-name {
        font-size: 16px;
    }
    nav .col-div-4 {
        flex: 1;
    }
    .icons {
        margin-right: 12px;
    }
    .overlay {
        height: 100vh;
    }
}
@media screen and (max-width: 768px) {
    nav.open .sidebar {
        width: 80%;
    }
    .sidebar-content {
        padding: 20px 8px;
    }
}
@media screen and (max-width: 768px) {
    h3 {
        text-align: center;
        margin-left: 0;
    }
}
@media screen and (max-width: 768px) {
    .overlay {
        height: 100vh;
        width: 100vw;
    }
}
::-webkit-scrollbar {
    width: 0; /* This will remove the scrollbar but still allow scrolling */
}

/* Optional: Customize scrollbar track and thumb */
::-webkit-scrollbar-track {
    background: transparent; /* You can set your desired background color */
}

::-webkit-scrollbar-thumb {
    background: transparent; /* You can set your desired thumb color */
}


</style>
