
<script>
 const searchInput = document.getElementById('searchInput');
const placeholderText = "Search for Products, Brands and More";
let index = 0;

function animatePlaceholder() {
  const currentPlaceholder = placeholderText.substring(0, index);
  searchInput.setAttribute('placeholder', currentPlaceholder);

  index++;
  if (index > placeholderText.length) {
    index = 0;
  }

  setTimeout(animatePlaceholder, 150); // Adjust the timing between letters
}

// Start the animation when the page loads
window.addEventListener('load', animatePlaceholder);


</script>
